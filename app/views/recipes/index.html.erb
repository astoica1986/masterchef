<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<%= simple_form_for :search, url: root_path, method: 'GET', html: { class: 'form-inline' } do |f| %>
  <%= render partial: 'search_form_fields', locals: { f: f } %>
<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ingredients</th>
      <th>Author</th>
      <th>Difficulty</th>
      <th>Preparation Time</th>
      <th>Cook Time</th>
      <th>Total Time</th>
      <th>Budget</th>
      <th>Number of people</th>
      <th>Number of comments</th>
      <th>Rate</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.author %></td>
        <td><%= recipe.difficulty %></td>
        <td><%= recipe.prep_time %></td>
        <td><%= recipe.cook_time %></td>
        <td><%= recipe.total_time %></td>
        <td><%= recipe.budget %></td>
        <td><%= recipe.people_quantity %></td>
        <td><%= recipe.nb_comments %></td>
        <td><%= recipe.rate %></td>
        <td><%= recipe.tags %></td>


        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @recipes %>
<br>

<%= link_to 'New Recipe', new_recipe_path %>
